<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relativo"
    tools:context="com.estadistica.israel.estadistica.JugadoresEquiposNuevosActivity">

    <EditText
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="Dorsal"
        android:id="@+id/introducirDorsal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/introducirNombre"
        android:layout_alignStart="@+id/introducirNombre" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Nombre de jugador"
        android:maxLength="50"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:id="@+id/introducirNombre"
        android:layout_below="@+id/introducirDorsal"
        android:layout_alignLeft="@+id/botonEmpezarEstadis"
        android:layout_alignStart="@+id/botonEmpezarEstadis" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Ir a estadistica"
        android:id="@+id/botonEmpezarEstadis"
        android:onClick="pasarActividad2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnCrearBoton"
        android:layout_below="@+id/introducirNombre"
        android:layout_alignLeft="@+id/introducirNombre"
        android:layout_alignStart="@+id/introducirNombre"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce un dorsal:"
        android:id="@+id/txtViewDorsal"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:layout_above="@+id/introducirNombre"
        android:layout_toLeftOf="@+id/introducirDorsal"
        android:layout_toStartOf="@+id/introducirDorsal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce un nombre:"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/introducirNombre"
        android:layout_alignLeft="@+id/txtViewDorsal"
        android:layout_alignStart="@+id/txtViewDorsal" />
</RelativeLayout>
